{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "VisualEditor0",
      "Effect": "Allow",
      "Action": [
        "dynamodb:BatchWriteItem",
        "dynamodb:PutItem",
        "dynamodb:Scan",
        "dynamodb:Query",
        "dynamodb:GetItem"
      ],
      "Resource": [
        "arn:aws:dynamodb:us-east-1:---YOUR_ACCOUNT_ID---:table/---YOUR_DYNAMODB_TABLE_NAME---",
        "arn:aws:dynamodb:us-east-1:---YOUR_ACCOUNT_ID---:table/---YOUR_DYNAMODB_TABLE_NAME---/index/*"
      ]
    }
  ]
}